{{ form_start(form) }}
    <div class="flex">
        <div class="item">
            {{ form_row(form.pictureFiles) }}
        </div>
    </div>
    <div class="flex">
        <div class="item">
            {{ form_row(form.title) }}
        </div>
        <div class="item">
            {{ form_row(form.slug) }}
        </div>
    </div>
    <div class="flex">
        <div class="item">
            {{ form_row(form.linkWeb) }}
        </div>
        <div class="item">
            {{ form_row(form.linkGithub) }}
        </div>
    </div>
    <div class="flex">
            <div class="left_zone">
                {% if project.headerImage %}
                    <div class="flex_end">
                        <img width="250px" src="{{ asset('./images/projets/' ~ project.headerImage) }}"></img>
                    </div>
                {% endif %}
            </div>
            <div class="right_zone flex_align_center">
                {{ form_row(form.headerImageFile) }}
            </div>
    </div>
    <div class="flex_column">
            {{ form_errors(form.description) }}
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
    </div>
    <div class="flex_between">
        <a class="btn_back"href="{{ path('admin.project.index') }}">Retour</a>
        <button class="btn_save"class="btn_save">{{ button_label|default('Cr√©er') }}</button>
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}

