{% extends 'admin/admin.html.twig' %}

{% block title %}Projet - {{ project.title }}{% endblock %}

{% block bodyAdmin %}
    <h1>Projet - {{ project.title }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>LinkWeb</th>
                <td>{{ project.linkWeb }}</td>
            </tr>
            <tr>
                <th>LinkGithub</th>
                <td>{{ project.linkGithub }}</td>
            </tr>
            <tr>
                <th>HeaderImage</th>
                <td>{{ project.headerImage }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ project.slug }}</td>
            </tr>
        </tbody>
    </table>
    <div class="flex_between">
        <div>
            <a href="{{ path('admin.project.index') }}">Retour</a>
        </div>
        {{ include('admin/project/_delete_form.html.twig') }}
    </div>
{% endblock %}
