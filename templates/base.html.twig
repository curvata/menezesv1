<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="icon" href="{{ asset('./images/favicon.ico') }}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Portfolio Menezes{% endblock %}</title>
        {% block description %}
            <meta name="description" content="Portfolio de Cancelinha Menezes Mike" />
        {% endblock %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('animation') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="container">
                <div class="top t15">
                    <div class="logo">
                        <a href="/"><img src="{{ asset('./images/logo.jpg') }}" alt="logo Menezes"></a>
                    </div>
                    <nav class="menu">
                        <ul>
                            <li>
                                <a class="menu_link" href="{{ path('home') }}#projects">Réalisations</a>
                            </li>
                            <li>
                                <a class="menu_link" href="#contact">Contact</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        {% block body %}{% endblock %}
        <section id="contact">
            <div class="container">
                <h2 class="title hb t05">Me contacter</h2>
                <p class="subtitle hb t10">N'hésitez pas à me contacter</p>
                <div class="content">
                    <address class="details hl t05">
                        <div class="item">
                            <img src="{{ asset('./images/icones/name.png') }}" alt="Icône id">
                            <p>Cancelinha Menezes Mike</p>
                        </div>
                        <div class="item">
                            <img src="{{ asset('./images/icones/address.png') }}" alt="Icône adresse">
                            <p>Province du Luxembourg, Belgique</p>
                        </div>
                        <div class="item">
                            <img src="{{ asset('./images/icones/mail.png') }}" alt="Icône adresse e-mail">
                            <a href="mailto:hello@menezes.be">hello@menezes.be</a>
                        </div>
                        <div class="item">
                            <img src="{{ asset('./images/icones/phone.png') }}" alt="Icône téléphone">
                            <p>+352 661 89 14 89<p>
                        </div>
                    </address>
                    <div class="contact_form hr t05">
                        {% for message in app.flashes('form_success') %}
                            <div class="alert_success">{{message}}</div>
                        {% endfor %}
                        {% for message in app.flashes('form_error') %}
                            <div class="alert_danger">{{message}}</div>
                        {% endfor %}
                        <form action="{{ path('contact') }}" name="contact" method="POST">
                            <div class="flex_between">
                                <div class="input">
                                    <input id="name" name="contact[name]" type="text" minlength="5" maxlength="30" placeholder="Votre nom" required>
                                </div>
                                <div class="input">
                                    <input id="email" name="contact[email]" type="email" placeholder="Votre e-mail" required>
                                </div>
                            </div>
                            <div class="input">
                                <textarea id="message" name="contact[message]" type="texte" minlength="50" maxlength="200" title="50 à 200 caractères" placeholder="Votre message" required></textarea>
                            </div>
                            <input type="hidden" id="contact__token" name="contact[_token]" value="{{ csrf_token('contact') }}"/>
                            <button class="btn_black full" type="submit">Envoyer</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <footer>
            <div class="container">
                <div class="content">
                    <p>Développé par <a href="https://menezes.be">Menezes</a></p>
                    <a href="https://github.com/curvata"><img src="{{ asset('./images/icones/github.png') }}" alt="logo github"></a>
                </div>
            </div>
        </footer>
    </body>
</html>
